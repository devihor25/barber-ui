{
  "version": 2,
  "name": "barber-ui",
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "storybook-static/**/*",
      "use": "@vercel/static"
    }
  ],
  "installCommand": "npm install --legacy-peer-deps && npm create storybook@8.3",
  "buildCommand": "npm run build && npm run build-storybook",
  "outputDirectory": "dist",
  "framework": "vite",
  "ignoreCommand": "echo 'No ignored files'"
}
